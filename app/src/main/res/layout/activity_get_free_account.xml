<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetFreeAccount"
    android:background="@color/Dark1"
        >

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
            <ImageView
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/but_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_outline_arrow_left"/>
    </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get your free account"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textSize="33sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continue with Apple"
                        android:layout_margin="15dp"
                        android:drawableStart="@drawable/more"
                        android:background="@drawable/but_dark"
                        android:paddingStart="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:textSize="16sp"
                        />


                    <androidx.appcompat.widget.AppCompatButton
                        android:textSize="16sp"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Continue with Google"
                        android:layout_margin="15dp"
                        android:drawableStart="@drawable/more"
                        android:background="@drawable/but_dark"
                        android:paddingStart="20dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/Greyscale500"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView

                                android:layout_marginStart="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Work Email *"
                                android:textColor="@color/white"
                                android:fontFamily="@font/urbanist_bold"
                                android:textSize="18sp"
                                />
                        </LinearLayout>


                        <EditText
                            android:fontFamily="@font/urbanist_regular"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/Greyscale500"
                            android:textColor="@color/white"
                            android:hint="hello@company.com"

                            />
                    </LinearLayout>



                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continue with Email"
                        android:textAllCaps="false"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:textSize="18sp"
                        android:layout_margin="20dp"
                        />





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account"
                        android:gravity="center"
                        android:fontFamily="@font/urbanist_regular"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#008000"
                        android:fontFamily="@font/celebes_semi_bold"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

</RelativeLayout>
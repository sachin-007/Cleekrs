<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark1"
    android:padding="20dp"
    tools:context=".Report">

    <LinearLayout
        android:id="@+id/headrepos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_outline_arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:textSize="22sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headrepos"
        android:layout_marginTop="15dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a reason"
                android:textSize="20dp"

                android:textColor="@color/white"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <RadioGroup

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton

                        android:id="@+id/radio_button1"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="Dangerous organizations/individuals" />

                    <RadioButton
                        android:id="@+id/radio_button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Frauds &amp; Scams"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Misleading Information"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Illegal activities or regulated goods"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Violent &amp; graphic contents"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Animal Cruelty"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Pornography &amp; nudity"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Hate Speech"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Harrashment or bullying"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Intelectual property infringement"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Spam"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Minor Safety"
                        android:layout_below="@id/radio_button1" />
                    <RadioButton
                        android:id="@+id/radio_button13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Other"
                        android:layout_below="@id/radio_button1" />

                </RadioGroup>


            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/but_dark"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"


                    android:text="Cancel"/>



                <androidx.appcompat.widget.AppCompatButton
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/but_red"


                    android:text="Submit"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tredingsound"
    android:padding="20dp"
    android:background="@color/Dark1">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/headrepos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_outline_arrow_left"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tranding Sounds"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:textSize="22sp"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:src="@drawable/download"
                app:shapeAppearanceOverlay="@style/RoundedSquare1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/urbanist_bold"
                    android:text="Favorite Girl by Justin Bieber"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="387.5M Videos"
                    android:textSize="18sp"
                    android:textColor="@color/Dark3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/Crimson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/but_dark"
                android:text="Play Song"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/play"
                android:layout_margin="5dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:textColor="@color/Crimson"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="@drawable/but_dark"
                android:text="Add to Favorites"
                android:drawableStart="@drawable/bookmark"
                android:layout_margin="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <FrameLayout
                android:layout_marginStart="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"

                    android:layout_gravity="center"
                    android:src="@drawable/share"
                    app:civ_border_color="#FFFF"
                    app:civ_border_width="4dp" />

            </FrameLayout>
            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/urbanist_bold"
                    android:textSize="20dp"
                    android:text="Justin Bieber"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professional Singer"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Dark3"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton

                android:layout_gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/but_red"
                android:text="follow"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



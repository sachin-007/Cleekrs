<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/Dark1"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_outline_arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:textSize="22sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:layout_marginTop="15dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discoverability"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginBottom="08dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dark"
                    android:layout_gravity="center"
                    />
                <Switch

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Private Account"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/safetly"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Sugggest Account to Others"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/connections"
                    android:layout_gravity="center"
                    />
                <TextView

                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Sync Contact &amp; Friends"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"
                    android:layout_gravity="center"
                    />
                <TextView

                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Location Services"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personalization"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginBottom="08dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ads"
                    android:layout_gravity="center"
                    />
                <TextView

                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Ads Personalization"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/upload"
                    android:layout_gravity="center"
                    />
                <Switch

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Upload"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginBottom="08dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/download"
                    android:layout_gravity="center"
                    />
                <TextView

                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Downloads"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comments"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:gravity="center_vertical"


                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Comments"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center"
                    />
                <TextView

                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Mentions &amp; Tags"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/community"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:gravity="center_vertical"


                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Following List"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/duet"
                    android:layout_gravity="center"
                    />
                <TextView

                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Duet"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginEnd="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Liked Videos"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>